[*]
charset=utf-8
end_of_line=crlf
insert_final_newline=false
indent_style=space
indent_size=2

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=2

[{*.jhm,*.xslt,*.xul,*.rng,*.xsl,*.xsd,*.ant,*.svg,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=space
indent_size=4

[*.css]
indent_style=space
indent_size=2

[{*.applejs,*.js}]
indent_style=space
indent_size=2

[{*.ats,*.ts}]
indent_style=space
indent_size=4

[*.js.flow]
indent_style=space
indent_size=4

[{*.pug,*.jade}]
indent_style=space
indent_size=4

[{*.md,*.mkd,*.markdown}]
indent_style=space
indent_size=4

